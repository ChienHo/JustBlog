@model IEnumerable<FA.JustBlog.Core.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Category Manage</h2>

<p>
    <a href="@Url.Action("Create")"><button class="btn btn-success"><i class="fa fa-plus">Add new</i></button></a>
</p>

<div class="table-responsive">
    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UrlSlug)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrlSlug)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new {id = item.Id})">
                            <button class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                            </button>
                        </a>
                        <a href="@Url.Action("Details", new {id = item.Id})">
                            <button class="btn btn-info">
                                <i class="fa fa-info-circle"></i>
                            </button>
                        </a>
                        <a href="@Url.Action("Delete", new {id = item.Id})" onclick="alert('Are you sure to delete this item?')">
                            <button class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

