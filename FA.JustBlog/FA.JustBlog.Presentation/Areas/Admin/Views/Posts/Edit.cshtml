@model FA.JustBlog.Core.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Posts", FormMethod.Post, new { id = "frm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        @Html.Partial("AddOrUpdate")
        <div class="form-group">
            @Html.LabelFor(model => model.ImgUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-row">
                <div class="col-6 ml-3">
                    <input type="file" class="custom-file-input" id="validatedCustomFile" name="ImgUrl" onchange="readURL(this)">
                    <label class="custom-file-label" for="validatedCustomFile">Choose an image</label>
                </div>
                <div class="col-5">
                    <img id="FileImage" src="~/Content/Theme/img/@Model.ImgUrl" name="ImgUrl" alt="your image" class="img-thumbnail" width="200" />
                    <input type="text" class="form-control" name="ImgUrl" value="@Model.ImgUrl" required hidden="hidden" />
                    @Html.ValidationMessageFor(m => m.ImgUrl, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Ckediter{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/ckeditorconfig.js"></script>
    <script src="~/Content/readurl.js"></script>
    <script>
        $(function () {
            $(document).on('change', ':file', function () {
                var input = $(this), numFiles = input.get(0).files ? input.get(0).files.length : 1,
                    label = input.val().replace(/\\/g, '/').replace(/.*\//, ''); input.trigger('fileselect', [numFiles, label]);
            });
            $(document).ready(function () {
                $(':file').on('fileselect', function (event, numFiles, label) {
                    var input = $(this).parents('.custom-file').find('.custom-file-label'),
                        log = numFiles > 1 ? numFiles + ' files selected' : label; if (input.length) { input.text(log); } else { if (log) alert(log); }
                });
            });
        });
    </script>
}
@section InputTag
{
    <script src="~/Areas/Content/js/bootstrap-tagsinput.js"></script>
}