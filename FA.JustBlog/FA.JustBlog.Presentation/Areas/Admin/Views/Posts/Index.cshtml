@model IEnumerable<FA.JustBlog.Core.Post>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Category Manage</h2>
@if(User.IsInRole("Administrators") || User.IsInRole("Contributor"))
{ <p>
      <a href="@Url.Action("Create")"><button class="btn btn-success"><i class="fa fa-plus">Add new</i></button></a>
  </p> }
    
<div class="table-responsive">
    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Published)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.Title)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Title)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.PostedOn)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Modified)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Published)
                    </th>
                    <td>
                        <form action="@Url.Action("Delete", "Posts", new {id = item.Id})">

                            <a href="@Url.Action("Edit", "Posts", new {id = item.Id})" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-info">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <button type="submit" onclick="return confirm('Are you sure to delete this post?');" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>