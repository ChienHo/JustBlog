@model IEnumerable<FA.JustBlog.Core.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Post manage</h2>

<p>
    <a href="@Url.Action("Create")"><button class="btn btn-success"><i class="fa fa-plus">Add new</i></button></a>
</p>
<div class="table-responsive">
    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentHeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentTime)
        </th>
        <th></th>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentHeader)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentTime)
                </td>
                <td>
                    <form action="@Url.Action("Delete", "Comments", new {id = item.CommentId})">

                        <a href="@Url.Action("Edit", "Comments", new {id = item.CommentId})" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details", new {id = item.CommentId})" class="btn btn-info">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        <button type="submit" onclick="return confirm('Are you sure to delete this post?');" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }

    </table>
</div>  